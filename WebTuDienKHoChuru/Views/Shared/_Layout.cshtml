@using Microsoft.AspNetCore.Http;
@using WebTuDienKHoChuru.Utils;
@using WebTuDienKHoChuru.Models.User;

<!DOCTYPE html>
<html lang="vi">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - Từ điển K'Ho - Việt - Churu</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" />
	<link rel="icon" type="image/png" href="~/favicon.ico">
</head>
<body>
	<header>
		<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
			<div class="container">
				<a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Từ điển K'Ho - Việt - Churu</a>
				<button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
						aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
					<ul class="navbar-nav flex-grow-1">
						<li class="nav-item">
							<a class="nav-link text-dark @Html.IsSelected(actions: "Index", controllers: "Home")" asp-area="" asp-controller="Home" asp-action="Index">Trang chủ</a>
						</li>
						@{
							string role = Context.Session.GetString("Role");
							if (role == Role.Colaborator)
							{
								<li class="nav-item">
									<a class="nav-link text-info @Html.IsSelected(actions: "Index", controllers: "Colaborator")" asp-area="" asp-controller="Contribution" asp-action="Index">Trang người đóng góp</a>
								</li>
							}
							else if (role == Role.Admin)
							{
								<li class="nav-item">
									<a class="nav-link text-info @Html.IsSelected(actions: "Index", controllers: "Admin")" asp-area="" asp-controller="Admin" asp-action="Index">Trang quản trị viên</a>
								</li>
							}
						}
						@{
							string username = @Context.Session.GetString("Username");
							if (username == null)
							{
								<li class="nav-item">
									<a class="nav-link text-success @Html.IsSelected(actions: "Index", controllers: "Login")" asp-area="" asp-controller="Login" asp-action="Index">Đăng nhập</a>
								</li>
							}
							else
							{
								<li class="nav-item">
									<i class="nav-link text-success">Xin chào, @username</i>
								</li>
								<li class="nav-item">
									<a class="nav-link text-danger" asp-area="" asp-controller="Login" asp-action="Logout">Đăng xuất</a>
								</li>
							}
						}
					</ul>
				</div>
			</div>
		</nav>
	</header>
	<div class="container">
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>

	<footer class="border-top footer text-muted">
		<div class="container">
			&copy; 2021 - Đại học Đà Lạt
		</div>
	</footer>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
